<!DOCTYPE html>
<html>

<head>
    <!--Import materialize.css-->
    <link rel="stylesheet" href="css/materialize.css">
    <!-- Import animate css -->
    <link rel="stylesheet" type="text/css" href="css/animations.css">
    <!-- Import my custom index stylesheet -->
    <link rel="stylesheet" type="text/css" href="css/style.css">
    <title>Blog</title>
</head>

<body>
    <title>Blog - Admin</title>
    <header role="header">
        <nav role="navigation">
            <div class="nav-wrapper">
                <a href="/" class="brand-logo">Blog</a>
                <ul class="right hide-on-med-and-down main-nav">
                    <li><a href="#modal1">Create new blog</a></li>
                </ul>
            </div>
        </nav>
    </header>
    <main role="main">
        <section role="welcome banner" class="section" id="banner">
            <div id="welcome">
                <h1>Howdie</h1>
                <h4>Start blogging now!</h4>
            </div>
            <div class="row">
                <div class="col s12">
                    <ul class="tabs">
                        <li class="tab col s4"><a class="active" href="#test1">Blogs</a></li>
                        <li class="tab col s4"><a href="#test2">Start bew blog</a></li>
                        <li class="tab col s4"><a href="#test3">Edit blog</a></li>
                    </ul>
                </div>
            </div>
        </section>
        <section role="main section" class="section" id="mainSection">
            <div id="test1" class="col s12">
                <% include ./partials/viewAllBlogs %>
            </div>
            <div id="test2" class="col s12">
                <div class="container">
                    <form class="col s12" method="POST" action="/admin">
                        <div class="row">
                            <h4 class="inputHeading">New blogpost</h4>
                            <div class="input-field col s12">
                                <input name="blogTitle" id="blogTitle" type="text" class="validate" required>
                                <label for="blogTitle">Title</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                            <textarea name="blogContent" class="materialize-textarea validate" id="blogContent textarea1" type="text" required></textarea>
                                <label for="blogContent">Start your blog...</label>
                            </div>
                        </div>
                        <button class="btn waves-effect waves-light" type="submit" name="action">Create Blog Post</button>
                    </form>
                </div>
            </div>
            <div id="test3" class="col s12">
                <div class="container">
                    <h4 class="inputHeading">Delete a blogpost</h4>
                    <input class="submissionfield col s6" placeholder="Enter the title of the blog here..." type="search" id="deleteBar">
                    <button class="btn waves-effect waves-light" id="deleteBlog">Delete</button>
                </div>
            </div>
        </section>
        <!-- Modal Structure -->
        <div id="modal1" class="modal modal-fixed-footer">
            <div class="modal-content">
                <form class="col s12 scrollspy" method="POST" action="/admin">
                    <div class="row">
                        <h4 class="inputHeading">New blogpost</h4>
                        <div class="input-field col s12">
                            <input name="blogTitle" id="blogTitle" type="text" class="validate" maxlength="100" required>
                            <label for="blogTitle">Title</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <textarea name="blogContent" class="materialize-textarea validate" id="blogContent textarea1" type="text" required></textarea>
                            <label for="blogContent">Start your blog...</label>
                        </div>
                    </div>
            </div>
            <div class="modal-footer">
                <button class="btn waves-effect waves-light" type="submit" name="action">Create</button>
                </form>
                <button class="btn waves-effect waves-light modal-action modal-close" id="cancel">Cancel</button>
            </div>
        </div>
    </main>
    <footer role="footer">
    </footer>
    <script src="js/jquery-3.1.1.min.js"></script>
    <script src="js/materialize.js"></script>
    <!-- Import CSS animation script -->
    <script src="js/css3-animate-it.js"></script>
    <!-- Import Font Awesome script -->
    <script src="https://use.fontawesome.com/add6c7c4be.js"></script>
    <!-- Import my personal stylesheet -->
    <script src="js/deleteBlog.js"></script>
    <script src="js/style.js"></script>
</body>

</html>